{% schema %}
{
  "name": "Footer Minimal Pro",
  "settings": [
    {
      "type": "header",
      "content": "Estilo e Cores"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Cor de Fundo",
      "default": "#6D0AD6"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Cor do Texto",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Cor dos Títulos",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Cor das Bordas",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Marca"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Largura do Logo",
      "default": 150
    },
    {
      "type": "richtext",
      "id": "brand_description",
      "label": "Descrição da Marca",
      "default": "<p>Qualidade e elegância em cada detalhe. Sua loja de confiança.</p>"
    },
    {
      "type": "header",
      "content": "Navegação"
    },
    {
      "type": "link_list",
      "id": "menu_1",
      "label": "Menu Principal",
      "default": "footer"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Menu Secundário"
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Mostrar Newsletter",
      "default": true
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Título da Newsletter",
      "default": "Novidades"
    },
    {
      "type": "text",
      "id": "newsletter_text",
      "label": "Texto da Newsletter",
      "default": "Cadastre-se para receber ofertas exclusivas."
    },
    {
      "type": "header",
      "content": "Contato"
    },
    {
      "type": "checkbox",
      "id": "show_contact",
      "label": "Mostrar Contato",
      "default": true
    },
    {
      "type": "html",
      "id": "contact_info",
      "label": "Informações de Contato",
      "default": "<p>sac@loja.com<br>WhatsApp: (11) 99999-9999</p>"
    },
    {
      "type": "header",
      "content": "Rodapé Inferior"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Mostrar Redes Sociais",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_payment",
      "label": "Mostrar Ícones de Pagamento",
      "default": true
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Texto de Copyright",
      "default": "Todos os direitos reservados."
    },
    {
      "type": "text",
      "id": "cnpj",
      "label": "CNPJ/Razão Social",
      "info": "Opcional"
    }
  ]
}
{% endschema %}

<style>
  .footer-minimal {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: 80px 0 40px;
    font-size: 15px;
    font-family: var(--text-font-family), sans-serif;
    line-height: 1.7;
    border-top: 1px solid rgba(0,0,0,0.05);
  }
  
  .footer-minimal__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
  }
  
  /* Grid Layout */
  .footer-minimal__grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr;
    gap: 60px;
    margin-bottom: 80px;
  }
  
  /* Headings */
  .footer-minimal__heading {
    color: {{ section.settings.heading_color }};
    font-size: 12px;
    font-weight: 700;
    margin-bottom: 25px;
    text-transform: uppercase;
    letter-spacing: 2px;
    opacity: 0.9;
  }
  
  /* Links */
  .footer-minimal a {
    color: {{ section.settings.text_color }};
    text-decoration: none;
    transition: all 0.3s ease;
    opacity: 0.8;
    display: inline-block;
  }
  
  .footer-minimal a:hover {
    opacity: 1;
    transform: translateX(3px);
  }
  
  .footer-minimal__nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-minimal__nav li {
    margin-bottom: 14px;
  }
  
  /* Logo & Brand */
  .footer-minimal__logo-img {
    max-width: {{ section.settings.logo_width }}px;
    height: auto;
    margin-bottom: 25px;
    display: block;
  }
  
  .footer-minimal__description {
    opacity: 0.8;
    margin-bottom: 30px;
    max-width: 300px;
  }
  
  /* Newsletter Form */
  .footer-minimal__newsletter-form {
    position: relative;
    margin-bottom: 30px;
  }
  
  .footer-minimal__input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    border-bottom: 1px solid rgba(255,255,255, 0.3);
    padding-bottom: 5px;
    transition: border-color 0.3s;
  }
  
  .footer-minimal__input-wrapper:focus-within {
    border-bottom-color: rgba(255,255,255, 1);
  }
  
  .footer-minimal__input {
    width: 100%;
    background: transparent;
    border: none;
    color: {{ section.settings.text_color }};
    padding: 10px 0;
    font-size: 14px;
    outline: none;
  }
  
  .footer-minimal__input::placeholder {
    color: {{ section.settings.text_color }};
    opacity: 0.5;
  }
  
  .footer-minimal__submit {
    background: none;
    border: none;
    color: {{ section.settings.text_color }};
    cursor: pointer;
    padding: 0 10px;
    font-size: 18px;
    transition: transform 0.3s;
  }
  
  .footer-minimal__submit:hover {
    transform: translateX(3px);
  }
  
  /* Contact Info */
  .footer-minimal__contact-info {
    opacity: 0.8;
    font-size: 14px;
  }
  
  .footer-minimal__contact-info p {
    margin-bottom: 10px;
  }

  /* Social Icons */
  .footer-minimal__social-icons .social-media__item-list {
    display: flex;
    gap: 20px;
    margin: 0;
    padding: 0;
    justify-content: flex-start;
  }
  
  .footer-minimal__social-icons li {
    margin: 0;
  }
  
  .footer-minimal__social-icons a {
    opacity: 0.7;
    transition: all 0.3s;
  }
  
  .footer-minimal__social-icons a:hover {
    opacity: 1;
    transform: translateY(-3px);
  }

  .footer-minimal__social-icons svg,
  .footer-minimal__social-icons svg path {
    width: 22px;
    height: 22px;
    fill: currentColor;
  }
  
  /* Bottom Section */
  .footer-minimal__bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 30px;
  }
  
  .footer-minimal__copyright-content {
    opacity: 0.6;
    font-size: 13px;
  }
  
  .footer-minimal__payment-icons {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    opacity: 0.9;
  }
  
  .footer-minimal__payment-icons svg {
    height: 28px;
    width: auto;
  }

  /* Responsiveness */
  @media (max-width: 1024px) {
    .footer-minimal__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 50px;
    }
  }
  
  @media (max-width: 768px) {
    .footer-minimal {
      padding: 50px 0 30px;
    }
    
    .footer-minimal__container {
      padding: 0 25px;
    }

    .footer-minimal__grid {
      grid-template-columns: 1fr;
      gap: 40px;
      margin-bottom: 50px;
    }
    
    .footer-minimal__col {
      text-align: center;
    }
    
    .footer-minimal__logo-img {
      margin-left: auto;
      margin-right: auto;
    }
    
    .footer-minimal__description,
    .footer-minimal__contact-info {
      margin-left: auto;
      margin-right: auto;
    }
    
    .footer-minimal__social-icons .social-media__item-list {
      justify-content: center;
    }
    
    .footer-minimal a:hover {
      transform: none; /* Disable hover movement on touch */
    }

    .footer-minimal__bottom {
      flex-direction: column-reverse;
      text-align: center;
      gap: 20px;
    }
    
    .footer-minimal__payment-icons {
      justify-content: center;
    }
  }
</style>

<footer class="footer-minimal" data-section-id="{{ section.id }}" data-section-type="footer-minimal">
  <div class="footer-minimal__container">
    <div class="footer-minimal__grid">
      
      <!-- Coluna 1: Marca -->
      <div class="footer-minimal__col">
        {% if section.settings.logo %}
          <a href="{{ routes.root_url }}">
            <img class="footer-minimal__logo-img" 
                 src="{{ section.settings.logo | img_url: '400x' }}" 
                 alt="{{ shop.name }}"
                 loading="lazy">
          </a>
        {% else %}
          <h2 class="footer-minimal__heading" style="font-size: 24px; text-transform: none; letter-spacing: 0;">{{ shop.name }}</h2>
        {% endif %}
        
        {% if section.settings.brand_description != blank %}
          <div class="footer-minimal__description">
            {{ section.settings.brand_description }}
          </div>
        {% endif %}

        {% if section.settings.show_social %}
          <div class="footer-minimal__social-icons">
            {% render 'social-media', show_social_media_name: false %}
          </div>
        {% endif %}
      </div>

      <!-- Coluna 2: Menu 1 -->
      {% if section.settings.menu_1 != blank %}
        <div class="footer-minimal__col">
          <h3 class="footer-minimal__heading">{{ linklists[section.settings.menu_1].title }}</h3>
          <nav class="footer-minimal__nav">
            <ul>
              {% for link in linklists[section.settings.menu_1].links %}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </nav>
        </div>
      {% endif %}

      <!-- Coluna 3: Menu 2 -->
      {% if section.settings.menu_2 != blank %}
        <div class="footer-minimal__col">
          <h3 class="footer-minimal__heading">{{ linklists[section.settings.menu_2].title }}</h3>
          <nav class="footer-minimal__nav">
            <ul>
              {% for link in linklists[section.settings.menu_2].links %}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </nav>
        </div>
      {% endif %}

      <!-- Coluna 4: Newsletter & Contato -->
      <div class="footer-minimal__col">
        {% if section.settings.show_newsletter %}
          <h3 class="footer-minimal__heading">{{ section.settings.newsletter_title }}</h3>
          <p class="footer-minimal__description">{{ section.settings.newsletter_text }}</p>
          
          {% form 'customer', id: 'footer-newsletter', class: 'footer-minimal__newsletter-form' %}
            {% if form.posted_successfully? %}
              <p class="form-success" style="color: #4CAF50;">{{ 'footer.newsletter.success' | t }}</p>
            {% else %}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="footer-minimal__input-wrapper">
                <input type="email" 
                       name="contact[email]" 
                       class="footer-minimal__input" 
                       placeholder="Seu melhor e-mail" 
                       required>
                <button type="submit" class="footer-minimal__submit" aria-label="Inscrever">
                  &rarr;
                </button>
              </div>
              {% if form.errors %}
                <small style="color: #ff8181;">{{ form.errors.messages['email'] }}</small>
              {% endif %}
            {% endif %}
          {% endform %}
        {% endif %}

        {% if section.settings.show_contact %}
          {% unless section.settings.show_newsletter %}
             <h3 class="footer-minimal__heading">{{ section.settings.contact_title }}</h3>
          {% endunless %}
          <div class="footer-minimal__contact-info" {% if section.settings.show_newsletter %}style="margin-top: 30px;"{% endif %}>
            {{ section.settings.contact_info }}
          </div>
        {% endif %}
      </div>

    </div>

    <!-- Rodapé Inferior -->
    <div class="footer-minimal__bottom">
      <div class="footer-minimal__copyright-content">
        <p>&copy; {{ 'now' | date: "%Y" }} Ducalu. {{ section.settings.copyright_text }}</p>
        {% if section.settings.cnpj != blank %}
          <p class="small" style="margin-top: 5px;">{{ section.settings.cnpj }}</p>
        {% endif %}
      </div>

      {% if section.settings.show_payment %}
        <div class="footer-minimal__payment-icons">
          {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag: class: 'icon' }}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</footer>
