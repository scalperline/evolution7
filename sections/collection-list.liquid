        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "800 x 800px recommended"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "If none is set, collection URL will be used."
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Collection",
      "name": "Collection Lego Grid",
      "blocks": [
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}

