<style>
    .evolution_countdown_simple {
        background-image: linear-gradient(45deg, var(--background-timerbox), var(--background-timerbox2));
        color: {{ section.settings.timer_box_simple_text_color }};
    }
</style>

<script defer="defer">
    function startTimer(duration, display) {
        var timer = duration, minutes, seconds;
        setInterval(function () {
            minutes = parseInt(timer / 60, 10)
            seconds = parseInt(timer % 60, 10);

            minutes = minutes < 10 ? "0" + minutes : minutes;
            seconds = seconds < 10 ? "0" + seconds : seconds;

            display.textContent = "00" + ":" + minutes + ":" + seconds;

            if (--timer < 0) {
                timer = duration;
            }
        }, 1000);
    }

    window.onload = function () {
        var tempo = {{ product.metafields.ultimate.tempo_cronometro_oferta }};
        var display = document.querySelector('#timer');
        startTimer(tempo, display);
    };
</script>