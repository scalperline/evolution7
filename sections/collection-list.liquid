﻿﻿﻿﻿﻿<section class="section section--lego-collections" data-section-id="{{ section.id }}" data-section-type="collection-list">
    <div class="container">
        <header class="section__header">
            <h2 class="section__title heading h3">
                {%- if section.settings.title != blank -%}
                    {{ section.settings.title | escape }}
                {%- endif -%}
            </h2>

            {%- if section.settings.link_title != blank and section.settings.link != blank -%}
                <a href="{{ section.settings.link }}"
                   class="section__action-link link">{{ section.settings.link_title | escape }} {% render 'icon', icon: 'tail-right' %}</a>
            {%- endif -%}
        </header>

        <div class="lego-grid">
            {%- for block in section.blocks -%}
                {%- assign collection = collections[block.settings.collection] -%}
                
                <a href="{{ block.settings.link | default: collection.url | default: '#' }}"
                   class="lego-item lego-item--{{ forloop.index }}"
                   {{ block.shopify_attributes }}>
                    
                    {%- assign collection_image = block.settings.image | default: collection.image | default: collection.products.first.featured_image -%}
                    
                    <div class="lego-item__image-wrapper">
                        {%- if collection_image -%}
                            <img class="lego-item__image lazyload image--fade-in" 
                                 data-src="{{ collection_image | img_url: '800x' }}" 
                                 alt="{{ collection_image.alt | escape }}">
                        {%- else -%}
                             <div class="lego-item__placeholder">
                                {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                             </div>
                        {%- endif -%}
                    </div>

                    <div class="lego-item__content">
                        <span class="lego-item__title">
                            {%- if section.settings.show_collection_title -%}
                                {{ collection.title | default: 'Coleção' }}
                            {%- endif -%}
                        </span>
                        <span class="lego-item__icon">{% render 'icon', icon: 'tail-right' %}</span>
                    </div>
                    
                    <div class="lego-item__overlay"></div>
                </a>
            {%- endfor -%}
        </div>
    </div>
</section>

<style>
    /* Layout Lego / Masonry */
    .section--lego-collections .section__title {
        text-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }

    .lego-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-auto-rows: 240px;
        gap: 20px;
        margin-top: 30px;
    }

    .lego-item {
        position: relative;
        display: block;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    }

    .lego-item:hover {
        transform: translateY(-5px) scale(1.01);
        box-shadow: 0 15px 40px rgba(59, 14, 164, 0.2); /* Sombra azul do tema */
        z-index: 2;
    }

    /* Padrão Irregular "Lego" - Desktop (Padrão) */
    /* Item 1: Grande Quadrado */
    .lego-item:nth-child(1) {
        grid-column: span 2;
        grid-row: span 2;
    }

    /* Item 2: Retângulo Vertical */
    .lego-item:nth-child(2) {
        grid-column: span 1;
        grid-row: span 2;
    }

    /* Item 3: Pequeno */
    .lego-item:nth-child(3) {
        grid-column: span 1;
        grid-row: span 1;
    }

    /* Item 4: Pequeno */
    .lego-item:nth-child(4) {
        grid-column: span 1;
        grid-row: span 1;
    }

    /* Item 5: Retângulo Horizontal */
    .lego-item:nth-child(5) {
        grid-column: span 2;
        grid-row: span 1;
    }

    /* Item 6: Pequeno */
    .lego-item:nth-child(6) {
        grid-column: span 1;
        grid-row: span 1;
    }
    
    /* Repetição do padrão para mais itens (opcional) */
    .lego-item:nth-child(7) { grid-column: span 1; grid-row: span 1; }
    .lego-item:nth-child(8) { grid-column: span 2; grid-row: span 1; }

    /* Responsividade Mobile */
    @media (max-width: 768px) {
        .lego-grid {
            grid-template-columns: repeat(2, 1fr); /* 2 Colunas no mobile */
            grid-auto-rows: 180px; /* Altura menor */
            gap: 10px;
        }

        /* Redefinindo Spans para Mobile */
        .lego-item:nth-child(1) {
            grid-column: span 2; /* Full width */
            grid-row: span 2;
        }

        .lego-item:nth-child(2) {
            grid-column: span 1;
            grid-row: span 1; /* Deixa de ser alto */
        }

        .lego-item:nth-child(3) {
            grid-column: span 1;
            grid-row: span 1;
        }

        .lego-item:nth-child(4) {
            grid-column: span 1;
            grid-row: span 1;
        }

        .lego-item:nth-child(5) {
            grid-column: span 2; /* Full width banner */
            grid-row: span 1;
        }

        .lego-item:nth-child(6) {
            grid-column: span 1;
            grid-row: span 1;
        }

        .lego-item__title {
            font-size: 1.1rem; /* Fonte menor */
        }

        .lego-item__icon {
            width: 30px;
            height: 30px;
        }
    }

    /* Imagem */
    .lego-item__image-wrapper {
        width: 100%;
        height: 100%;
    }

    .lego-item__image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
    }

    .lego-item:hover .lego-item__image {
        transform: scale(1.1);
    }
    
    .lego-item__placeholder svg {
        width: 100%;
        height: 100%;
        background: #f0f0f0;
    }

    /* Overlay e Texto */
    .lego-item__overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0) 60%);
        opacity: 0.8;
        transition: opacity 0.3s;
    }
    
    .lego-item:hover .lego-item__overlay {
        opacity: 1;
        background: linear-gradient(to top, rgba(59, 14, 164, 0.8) 0%, rgba(0,0,0,0) 70%); /* Azul do tema */
    }

    .lego-item__content {
        position: absolute;
        bottom: 20px;
        left: 20px;
        right: 20px;
        z-index: 2;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .lego-item__title {
        font-size: 1.4rem;
        font-weight: 700;
        color: #ffffff;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        transform: translateY(0);
        transition: transform 0.3s;
    }

    .lego-item__icon {
        background: #f5740a; /* Laranja do tema */
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        transform: scale(0);
        transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }
    
    .lego-item__icon svg {
        width: 14px;
        height: 14px;
    }

    .lego-item:hover .lego-item__icon {
        transform: scale(1);
    }

    /* Mobile Responsiveness */
    @media (max-width: 900px) {
        .lego-grid {
            grid-template-columns: repeat(2, 1fr);
            grid-auto-rows: 200px;
        }
        
        .lego-item:nth-child(1) { grid-column: span 2; grid-row: span 2; }
        .lego-item:nth-child(2) { grid-column: span 1; grid-row: span 1; }
        .lego-item:nth-child(3) { grid-column: span 1; grid-row: span 1; }
        .lego-item:nth-child(4) { grid-column: span 2; grid-row: span 1; }
        .lego-item:nth-child(5) { grid-column: span 1; grid-row: span 2; }
        .lego-item:nth-child(6) { grid-column: span 1; grid-row: span 1; }
    }
    
    @media (max-width: 480px) {
         .lego-grid {
            gap: 10px;
        }
        .lego-item__title {
            font-size: 1.1rem;
        }
    }
</style>

{% schema %}
{
  "name": "Collection Lego Grid",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Our collections"
    },
    {
      "type": "text",
